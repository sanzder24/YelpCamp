<%- include ('partials/header.ejs') %>

<div class="container">
    <div class="row">
        
        <div style="width: 30%; margin: 0 auto;">
            <h1 style="text-center">Edit <%= campgrounds.name %></h1>
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campgrounds.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%= campgrounds.image %>">
                </div>
                 <div class="form-group">
                          <input class="form-control" type="number" name="campground[price]" value="<%= campgrounds.price %>" min="0.01" step="0.01">
                  </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value= "<%= campgrounds.description %>">
                </div>
                <div class="form-group">
                <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campgrounds.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %> 